<?xml version="1.0" encoding="UTF-8"?>
<configuration-ui>
	<section name="Buddies" icon="32x32/system-users.png">
		<tab name="Filtering">
			<group-box name="General">
				<check-box caption="Show filter window" config-section="filtering" config-item="filter-showonload" />
				<check-box caption="Start filtering on any key press" config-section="filtering" config-item="filter-startonany" />
				<combo-box caption="Search in" config-section="filtering" config-item="filter-startswith">
					<item value="1" caption="Begining" />
					<item value="0" caption="Any place" />
				</combo-box>
				<check-box caption="Search also in buddy's UIN" config-section="filtering" config-item="filter-number" />
				<check-box caption="Search also in buddy's e-mail" config-section="filtering" config-item="filter-email" />
				<check-box caption="Search also in buddy's mobile phone number" config-section="filtering" config-item="filter-mobile" />
			</group-box>
		</tab>

	</section>

	<section name="Shortcuts" icon="32x32/preferences-desktop-peripherals.png">

		<tab name="Buddy List">
			<group-box name="Buddy List">
				<hot-key-edit caption="Filter buddies" config-section="ShortCuts" config-item="filtering_start" />
			</group-box>
		</tab>

	</section>

</configuration-ui>
