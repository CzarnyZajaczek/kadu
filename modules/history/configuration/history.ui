<configuration-ui>
	<section name="Chat">
		<tab name="History">
			<group-box name="General">
				<check-box caption="Save history" config-section="History" config-item="Logging" id="history/save"
					   tool-tip="Save messages in history" />
			</group-box>
			<group-box name="Status changes" id="history/statusChanges">
				<check-box caption="Don't show status changes" config-section="History" config-item="DontShowStatusChanges"
					   tool-tip="Don't show status changes in history" />
				<check-box caption="Don't save status changes" config-section="History" config-item="DontSaveStatusChanges"
					   tool-tip="Don't save status changes in history" />
			</group-box>
			<group-box name="Citation" id="history/citation">
				<spin-box caption="Message citation in chat window" config-section="History" config-item="ChatHistoryCitation" min-value="0" max-value="200" />
				<slider caption="Don't cite messages older than" config-section="History" config-item="ChatHistoryQuotationTime" min-value="-744" max-value="-1" page-step="24" id="history/dontCiteOldMessages" />
				<label caption="." id="history/dontCiteOldMessagesLabel" />
			</group-box>
		</tab>
	</section>
	<section name="Shortcuts">
		<tab name="Chat">
			<group-box name="Chat" id="history/shortCuts">
				<hot-key-edit caption="View history" config-section="ShortCuts" config-item="kadu_viewhistory" />
			</group-box>
		</tab>
	</section>
</configuration-ui>
