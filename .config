# 
# KADU CONFIGURATION FILE
#


#
# Below are some internal modules, made by Kadu Team or got from others
# but placed in sources because of important functionality
#
# y - yes, compiled into kadu (static)
# m - module, compiles as .so (shared)
# n - no, module disabled
#

# Tray icon support
module_docking=y

# XLib tray docking techniques module (depends: docking)
module_x11_docking=m

# WindowMaker docking module (depends: docking)
module_wmaker_docking=n

# OpenSSL encrypted chat support
module_encryption=m

# Speech synthesis support (depends: notify)
module_speech=n

# Voice chat support (depends: dcc)
module_voice=m

# General sound support (depends: notify)
module_sound=y

# External application sound support (depends: sound)
module_ext_sound=m

# Direct /dev/dsp sound support (depends: sound)
module_dsp_sound=m

# aRts sound server support (depends: sound)
module_arts_sound=n

# ESD sound server support (depends: sound)
module_esd_sound=n

# Network Audio System support (depends: sound)
module_nas_sound=n

# SMS module
module_sms=m

# default gateways for SMS module (depends: sms)
module_default_sms=m

# dcc module with file transfer support
module_dcc=m

# Auto away module
module_autoaway=m

# Register/unregister account, remind/change password support
module_account_management=m

# General notification module
module_notify=y

# Notification by window module (depends: notify)
module_window_notify=m

# Notification by hints module (depends: notify)
module_hints=m

# Always on top window docking module (depends: docking)
module_desktop_docking=n

# Autoresponder module
module_autoresponder=m

# Echo sample module
module_echo=n
# Configuration wizard module
module_config_wizard=m

#
# Below are some external modules, made by third parties, but
# accepted by Kadu Team and quite well supported on our forum. When
# you choose to install any of these, the sources will be downloaded
# from their original web pages, so don't blame us when they are
# (maybe just temporarily) unavailable.
#
# y - yes, compiled into kadu (static)
# m - module, compiles as .so (shared)
# n - no, module disabled
#

# TCL scripting support and KaduPro extensions
module_tcl_scripting=n

# XMMS player support
module_xmms=n

# AmaroK player support
module_amarok=n

# Description from file module
module_filedesc=n

# Mail checker module
module_mail=n

# Spellchecker module (aspell support)
module_spellchecker=n

# PC-Speaker support
module_pcspeaker=n

# Notification by XOSD (depends: notify)
module_xosd_notify=n

# Weather checking
module_weather=n

#
# Below are some icon themes, one default and others, made by third
# parties, but accepted by Kadu Team and quite well supported on our
# forum. When you choose to install any of these, the sources will
# be downloaded from their original web pages, so don't blame us when
# they are (maybe just temporarily) unavailable.
#
# y - yes, install with kadu
# n - no, icon theme disabled
#

# Default icon theme shipped with sources
icons_default=y

# Crystal 16x16 icons made by Arcisz
icons_crystal16=n

# Crystal 22x22 icons made by Arcisz
icons_crystal22=n

